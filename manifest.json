{
  "manifest_version": 2,

  "name": "佛易",
  "description": "A toy extension to encode/decode text use foyue",
  "version": "0.2",
  "background" : { "scripts": ["js/background.js"] },
  "permissions": [
    "contextMenus",
    "http://www.keyfc.net/bbs/tools/tudou.aspx"
  ],
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },  
  "browser_action": {
    "default_icon": {
      "19": "img/icon-19.png",
      "38": "img/icon-38.png"
    },
    "default_popup": "pop.html"
  }
}
